      com.mysql.jdbc.Driver
   </property>

   <property name="hibernate.connection.url">
      jdbc:mysql://localhost/schoology
   </property>
   <property name="hibernate.connection.username">
      root
   </property>
   <property name="hibernate.connection.password">
      Tangamandapio
   </property>
   <mapping class="mx.itson.schoology.entidades.Actividad"/>
   <mapping class="mx.itson.schoology.entidades.Calificacion"/>
   <mapping class="mx.itson.schoology.entidades.Curso"/>
   <mapping class="mx.itson.schoology.entidades.Entrega"/>
   <mapping class="mx.itson.schoology.entidades.Usuario"/>
